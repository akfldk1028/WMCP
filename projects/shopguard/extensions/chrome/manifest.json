{
  "manifest_version": 3,
  "name": "ShopGuard",
  "version": "0.3.0",
  "description": "AI shopping protection - fake review detection, hidden fee alerts, dark pattern scanning",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "settings/settings.html",
  "commands": {
    "analyze-page": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Analyze current page"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
