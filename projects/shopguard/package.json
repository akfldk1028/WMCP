{
  "name": "@wmcp/shopguard",
  "version": "0.1.0",
  "description": "AI shopping protection - fake review detection, hidden fee alerts, dark pattern scanning",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shopguard-mcp": "./dist/mcp/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./review": {
      "import": "./dist/review/index.js",
      "types": "./dist/review/index.d.ts"
    },
    "./price": {
      "import": "./dist/price/index.js",
      "types": "./dist/price/index.d.ts"
    },
    "./darkpattern": {
      "import": "./dist/darkpattern/index.js",
      "types": "./dist/darkpattern/index.d.ts"
    },
    "./mcp": {
      "import": "./dist/mcp/server.js",
      "types": "./dist/mcp/server.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:extension": "tsc --project tsconfig.extension.json && node scripts/build-extension.mjs",
    "check:extension": "tsc --project tsconfig.extension.json",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist extensions/chrome/dist"
  },
  "keywords": [
    "shopguard",
    "fake-review-detection",
    "hidden-fees",
    "dark-patterns",
    "consumer-protection",
    "ai-shopping",
    "mcp"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.300",
    "esbuild": "^0.25.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.18"
  }
}
