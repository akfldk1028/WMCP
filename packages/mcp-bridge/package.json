{
  "name": "@wmcp/mcp-bridge",
  "version": "0.1.0",
  "private": true,
  "description": "Bridge between MCP servers and WebMCP - reads MCP tools/list, generates WebMCP code",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@wmcp/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "rimraf": "^5.0.0",
    "typescript": "^5.4.0"
  }
}
